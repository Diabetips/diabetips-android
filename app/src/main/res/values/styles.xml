    <style name="TextInputLayoutTheme.MaterialThemeOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox.Dense">
        <item name="editTextStyle">@style/TextInputLayoutTheme.MaterialThemeOverlay.EditTextStyle</item>
