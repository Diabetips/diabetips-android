    <style name="DarkTheme" parent="AppTheme">
        <item name="colorBackground">@color/colorBackgroundDark</item>
        <item name="colorNavigationBackground">@color/colorBackgroundDarkLight</item>
        <item name="colorCardBackground">@color/colorBackgroundDarkLight</item>
