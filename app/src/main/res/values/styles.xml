    </style>

    <style name="BackgroundTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">?attr/imageBackground</item>
        <item name="android:clipChildren">false</item>
    </style>

    <style name="EmptyBackgroundTheme" parent="BackgroundTheme">
        <item name="android:background">@null</item>
    </style>

    <style name="ClearBackgroundTheme" parent="BackgroundTheme">
        <item name="android:background">?attr/colorBackground</item>
    </style>

    <style name="BackgroundMainTheme" parent="BackgroundTheme">
        <item name="android:background">?attr/imageMainBackground</item>
    </style>

    <style name="BackgroundHomeTheme" parent="BackgroundTheme">
        <item name="android:background">?attr/imageHomeBackground</item>
    </style>

    <style name="BackgroundDialogTheme" parent="BackgroundTheme">
        <item name="android:background">@drawable/dialog_background</item>
    </style>

    <style name="BackgroundCardTheme" parent="BackgroundTheme">
        <item name="android:layout_margin">@dimen/half_margin_size</item>
        <item name="cardBackgroundColor">?attr/colorCardBackground</item>
        <item name="cardCornerRadius">@dimen/margin_size</item>
    </style>

    <style name="BackgroundSearchViewCardTheme" parent="BackgroundTheme">
        <item name="cardBackgroundColor">?attr/colorSearchBackground</item>
        <item name="android:layout_marginTop">@dimen/search_bar_margin</item>
        <item name="android:layout_marginBottom">@dimen/search_bar_margin</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="cardCornerRadius">@dimen/search_bar_corner</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="ActionBarTheme" parent="ClearBackgroundTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/action_bar_height</item>
        <item name="android:elevation">@dimen/shadow_size</item>
    </style>

    <style name="circleToolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:background">?attr/circleToolbar</item>
    </style>

    <style name="ButtonTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorPrimary</item>
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="colorButtonNormal">?attr/colorPrimary</item>
        <item name="colorControlHighlight">?attr/colorPrimary</item>
    </style>

    <style name="MaterialButtonTheme" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/input_size</item>
        <item name="android:height">@dimen/input_size</item>
        <item name="android:layout_marginStart">@dimen/margin_size</item>
        <item name="android:layout_marginEnd">@dimen/margin_size</item>
        <item name="android:insetTop">@dimen/button_inset</item>
        <item name="android:insetBottom">@dimen/button_inset</item>
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:textColor">?attr/colorTextButton</item>
        <item name="android:elevation">@dimen/shadow_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorTextButton</item>
        <item name="iconSize">@dimen/text_size</item>
        <item name="backgroundTint">@color/material_button_color_selector</item>
        <item name="cornerRadius">@dimen/input_corner_size</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="MaterialButtonAltTheme" parent="MaterialButtonTheme">
        <item name="backgroundTint">@color/material_button_alt_color_selector</item>
    </style>

    <style name="MaterialButtonEmptyTheme" parent="MaterialButtonTheme">
        <item name="backgroundTint">@color/material_button_transparent_color_selector</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="MaterialButtonTransparentTheme" parent="MaterialButtonEmptyTheme">
        <item name="strokeColor">?attr/colorTextButton</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="ImageButtonTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:layout_height">@dimen/input_size</item>
        <item name="android:layout_width">@dimen/input_size</item>
        <item name="android:background">@drawable/image_button_background</item>
        <item name="tint">?attr/colorTextButton</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ImageButtonAltTheme" parent="ImageButtonTheme">
        <item name="android:background">@drawable/image_button_alt_background</item>
    </style>

    <style name="ImageButtonTransparentTheme" parent="ImageButtonTheme">
        <item name="android:background">@drawable/ripple_image_button</item>
        <item name="tint">?attr/colorBackgroundText</item>
    </style>

    <style name="ImageButtonTransparentAltTheme" parent="ImageButtonTransparentTheme">
        <item name="tint">?attr/colorTextButton</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">@dimen/floating_button_size</item>
        <item name="android:layout_height">@dimen/floating_button_size</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:elevation">@dimen/shadow_size</item>
        <item name="rippleColor">?android:colorControlHighlight</item>
        <item name="tint">?attr/colorTextButton</item>
        <item name="maxImageSize">@dimen/floating_button_image_size</item>
        <item name="fabCustomSize">@dimen/floating_button_size</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="TextInputTheme" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:textColor">?attr/colorText</item>
        <item name="android:textColorHint">?attr/colorHint</item>
    </style>

    <style name="ElevationTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:elevation">@dimen/shadow_size</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_size</item>
        <item name="android:layout_marginEnd">@dimen/margin_size</item>
        <item name="android:clipChildren">false</item>
        <item name="android:theme">@style/ElevationTheme</item>
        <item name="materialThemeOverlay">@style/TextInputLayoutTheme.MaterialThemeOverlay</item>
        <item name="boxBackgroundColor">?attr/colorInputBackground</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="boxCollapsedPaddingTop">-10dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_corner_size</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_corner_size</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_corner_size</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_corner_size</item>
        <item name="endIconTint">?attr/colorHint</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="android:textColorHint">?attr/colorHint</item>
        <item name="hintTextColor">?attr/colorHint</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="errorTextColor">?attr/colorWarm</item>
        <item name="errorIconTint">?attr/colorWarm</item>
    </style>

    <style name="TextInputNoHintLayoutTheme" parent="TextInputLayoutTheme">
        <item name="android:paddingTop">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
    </style>

    <style name="RemoveInputLayoutTheme" parent="TextInputLayoutTheme">
        <item name="endIconDrawable">@drawable/ic_remove</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="PasswordInputLayoutTheme" parent="TextInputLayoutTheme">
        <item name="endIconMode">password_toggle</item>
    </style>

    <style name="PasswordInputNoHintLayoutTheme" parent="TextInputNoHintLayoutTheme">
        <item name="endIconMode">password_toggle</item>
    </style>

    <style name="PasswordCounterInputLayoutTheme" parent="PasswordInputLayoutTheme">
        <item name="counterOverflowTextAppearance">@style/HintTextAppearance</item>
        <item name="counterTextAppearance">@style/HintTextAppearance</item>
        <item name="counterTextColor">?attr/colorBackgroundText</item>
        <item name="counterOverflowTextColor">?attr/colorBackgroundText</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">@integer/password_length</item>
    </style>

    <style name="DropdownInputLayoutTheme" parent="TextInputLayoutTheme">
        <item name="endIconMode">dropdown_menu</item>
    </style>

    <style name="DropdownTheme" parent="@style/Widget.AppCompat.EditText">
        <item name="android:paddingStart">@dimen/half_margin_size</item>
        <item name="android:paddingEnd">@dimen/half_margin_size</item>
        <item name="android:paddingTop">@dimen/quarter_margin_size</item>
        <item name="android:paddingBottom">@dimen/quarter_margin_size</item>
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:textColor">?attr/colorText</item>
        <item name="android:textColorHint">?attr/colorHint</item>
        <item name="android:inputType">none</item>
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
