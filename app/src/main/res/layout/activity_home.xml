<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.HomeActivity"
        style="@style/BackgroundHomeTheme">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profileButton"
        style="@style/MaterialButtonAltTheme"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/half_margin_size"
        android:layout_marginEnd="@dimen/half_margin_size"
        app:icon="@drawable/ic_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/viewMealButton"
        style="@style/MaterialButtonTheme"
        android:layout_width="match_parent"
        android:text="@string/view_meal"
        app:icon="@drawable/ic_meal"
        android:layout_marginBottom="@dimen/margin_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/newMealButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/newMealButton"
        style="@style/MaterialButtonTheme"
        android:layout_width="match_parent"
        app:icon="@drawable/ic_meal"
        android:text="@string/add_meal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/viewRecipeButton"
        style="@style/MaterialButtonTheme"
        android:layout_width="match_parent"
        android:text="@string/view_recipe"
        app:icon="@drawable/ic_recipe"
        android:layout_marginTop="@dimen/margin_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newMealButton" />

</androidx.constraintlayout.widget.ConstraintLayout>