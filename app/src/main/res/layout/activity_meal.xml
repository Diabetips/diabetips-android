<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MealActivity"
        style="@style/BackgroundTheme">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mealSearchList"
            style="@style/EmptyBackgroundTheme"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/newMealButton"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/newMealButton"
        style="@style/MaterialButtonTheme"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_size"
        android:text="@string/add_meal"
        app:icon="@drawable/ic_meal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>