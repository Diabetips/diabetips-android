<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/BackgroundTheme">

    <TextView
            android:id="@+id/recipeFoodText"
            android:theme="@style/TextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/recipeFoodQuantity"
            app:layout_constraintBottom_toBottomOf="@id/recipeFoodQuantity"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"/>

    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/recipeFoodQuantity"
            android:theme="@style/TextInputTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/recipeFoodUnit"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/recipeFoodUnit"
            android:theme="@style/TextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/recipeFoodQuantity"
            app:layout_constraintBottom_toBottomOf="@id/recipeFoodQuantity"
            app:layout_constraintEnd_toStartOf="@id/recipeFoodRemove"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

    <ru.dimorinny.floatingtextbutton.FloatingTextButton
            android:id="@+id/recipeFoodRemove"
            android:theme="@style/FloatingTextButtonTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:floating_right_icon="@drawable/ic_remove"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>