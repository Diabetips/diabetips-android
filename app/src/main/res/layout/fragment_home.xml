<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.HomeFragment"
        style="@style/BackgroundHomeTheme">

    <TextView
        android:id="@+id/titleHomeText"
        style="@style/TitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/half_margin_size"
        android:layout_marginTop="@dimen/half_margin_size"
        android:text="@string/home_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/viewRecipeButton"
        style="@style/ImageButtonTheme"
        android:layout_width="@dimen/input_size"
        android:layout_height="@dimen/input_size"
        android:contentDescription="@string/placeholder_text"
        android:src="@drawable/ic_recipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <LinearLayout
        android:id="@+id/homeLayout"
        style="@style/EmptyBackgroundTheme"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleHomeText"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sugarLineChartCard"
            style="@style/BackgroundCardTheme"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="14dp">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/sugarLineChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription=""/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/newMealButton"
            style="@style/MaterialButtonTheme"
            android:layout_width="wrap_content"
            android:text="@string/add_meal"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"
            android:layout_marginTop="-33dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mealHomeCard"
            style="@style/BackgroundCardTheme"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="45">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/mealHomeSwipeRefresh"
                style="@style/EmptyBackgroundTheme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mealHomeList"
                    style="@style/EmptyBackgroundTheme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>