<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.RecipeActivity"
        style="@style/BackgroundTheme">

    <com.mancj.materialsearchbar.MaterialSearchBar
        android:id="@+id/recipeSearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/SearchBarTheme"
        app:mt_hint="@string/search_recipe" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/recipeSwipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/EmptyBackgroundTheme"
        app:layout_constraintBottom_toTopOf="@+id/newRecipeButton"
        app:layout_constraintTop_toBottomOf="@+id/recipeSearchBar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recipeSearchList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/EmptyBackgroundTheme"
            app:layout_constraintBottom_toBottomOf="@+id/recipeSwipeRefresh"
            app:layout_constraintTop_toTopOf="@+id/recipeSwipeRefresh" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/newRecipeButton"
        style="@style/MaterialButtonTheme"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_size"
        android:text="@string/new_recipe"
        app:icon="@drawable/ic_recipe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>